program aufgabe5;
{$R+,Q+,X-}
uses
SysUtils,Math;


var

Zahl: byte;
Menue: String;
Satz: String;
Satzdeklariert: boolean;
Leerzeichenstelle: byte;
Leerzeichen: byte;
Woerter: byte;
Wortlaenge: byte;
TempWortlaenge: byte;



begin
Leerzeichenstelle := 0;
Satz := '';
Leerzeichen := 0;
Satzdeklariert := false;




repeat
writeln('Wählen sie den Menüpunkt aus!');
writeln('Satz eingeben: a');
writeln('Anzahl Wörter im Satz bestimmen: b');
writeln('Alle Wortlängen im Satz ausgeben: c');
writeln('Alle Wörter ausgeben, die mit einem Konsonanten beginnen, d');
writeln('Alle Wörter aus dem Satz löschen, die ein Zahlwort beinhalten: e');
writeln('Ende: x');


readln(Menue);

    if Menue = 'a' then
    begin
    writeln('Geben sie ihren Satz ein');
    readln(Satz);
    writeln(Satz);
    Satzdeklariert := true;
    end;


    if (Menue = 'b') and (Satzdeklariert = true) then
    begin
    for Leerzeichenstelle := 1 to length(Satz) do
    begin
    if Satz[Leerzeichenstelle] = ' ' then
        begin
        writeln('Leerzeichen an Position: ', Leerzeichenstelle);
        Leerzeichen := Leerzeichen + 1;
        end;
        end;
    Woerter := Leerzeichen + 1;
    writeln('Die Anzahl an Leerzeichen betraegt: ',Leerzeichen);
    writeln('Die Anzahl an Woerten betraegt: ', Woerter);

    end;
    if (Menue = 'c') and (Satzdeklariert = true) then
    begin
        TempWortlaenge := 0;
        for Wortlaenge := 1 to length(Satz) do
        begin
            if Satz[Wortlaenge] <> ' ' then
            TempWortlaenge := TempWortlaenge + 1
            else
            begin
            Woerter := Woerter + 1;
            writeln('Die Laenge des ', Woerter , ' Wortes betraegt: ', TempWortlaenge);
            TempWortlaenge := 0; // Reset for the next word
            end;
        end;
        // Output the length of the last word if Satz doesn't end with a space
        if TempWortlaenge > 0 then
        begin
            writeln('Die Laenge des letzten Wortes betraegt: ', TempWortlaenge);
        end;


    end;


    if (Menue = 'd') and (Satzdeklariert = true) then
    begin


    end;

    if (Menue = 'e') and (Satzdeklariert = true) then
    begin


    end;

    if (Menue = 'x') then
    begin

    end;

until not (Menue = 'a') or (Menue = 'b') or (Menue = 'c') or (Menue = 'd') or (Menue = 'e');


end.

